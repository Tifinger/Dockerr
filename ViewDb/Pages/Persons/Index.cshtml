@page
@model ViewDb.Pages.Persons.IndexModel
@{
}


<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Comment</th>
        <th>Date of Birth</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var person in Model.Persons)
    {
        <tr>
            <td>@person.Id</td>
            <td>@person.Name</td>
            <td>@person.Comment</td>
            <td>@person.DoB.ToShortDateString()</td>
        </tr>
    }
    </tbody>
</table>